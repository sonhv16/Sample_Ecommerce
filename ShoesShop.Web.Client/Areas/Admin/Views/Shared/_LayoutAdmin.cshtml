        <div class="line line1"></div>
        <div class="line line2"></div>
        <div class="line line3"></div>
    </div>
</div>
<!-- Loader ends-->
<!-- page-wrapper Start-->
<div class="page-wrapper">

    <!-- Page Header Start-->
    @await Html.PartialAsync("_HeaderPartial")
    <!-- Page Header Ends     
    -->
    <!-- Page Body Start-->
    <div class="page-body-wrapper">

        <!-- Page Left Sidebar Start-->
        @await Html.PartialAsync("_LeftBarPartial")
        <!-- Page Left Sidebar Ends-->

        <!-- Right sidebar Start-->
        @await Html.PartialAsync("_RightBarPartial")
        <!-- Right sidebar Ends-->

        @RenderBody()

        <!-- footer start-->
        @await Html.PartialAsync("_FooterPartial")
    </div>

</div>

