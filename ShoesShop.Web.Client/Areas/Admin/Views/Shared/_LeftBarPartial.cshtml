@using ShoesShop.DAL.Constants
@using ShoesShop.BLL.Services.Interfaces
@inject IIdentityService IdentityService
@{
    Layout = null;
    var userManagement = AppVersion.IsEnglishVersion ? "User" : "Quản lý người dùng";
    var productManagement = AppVersion.IsEnglishVersion ? "Product" : "Quản lý sản phẩm";
    var categoryManagement = AppVersion.IsEnglishVersion ? "Category" : "Quản lý thể loại";
    var brandManagement = AppVersion.IsEnglishVersion ? "Brand" : "Quản lý thương hiệu";
    var colorManagement = AppVersion.IsEnglishVersion ? "Color" : "Quản lý màu sắc";
    var sizeManagement = AppVersion.IsEnglishVersion ? "Size" : "Quản lý kích cỡ";
    var materialManagement = AppVersion.IsEnglishVersion ? "Material" : "Quản lý chất liệu";
    var backToHome = AppVersion.IsEnglishVersion ? "back To Home" : "Trở về trang chính";
    var promotionManagement = AppVersion.IsEnglishVersion ? "Promotion" : "Quản lý mã giảm giá";
    var orderManagement = AppVersion.IsEnglishVersion ? "Order" : "Quản lý đơn hàng";
    var ratingManagement = AppVersion.IsEnglishVersion ? "Rating" : "Quản lý đánh giá";
}

<div class="page-sidebar iconcolor-sidebar" id="div_left_side_bar">
    <div class="main-header-left d-none d-lg-block">
        <div class="logo-wrapper">
            <a href="/Admin/Home">
                <img src="@AppConst.LogoForDark" alt="">
            </a>
        </div>
    </div>
    <div class="sidebar custom-scrollbar">
        <ul class="sidebar-menu">
            <li>
            <a class="sidebar-header" href="/Admin/Home/Index">
                <i data-feather="home"></i><span>Dashboard</span>
            </a>
            @if (IdentityService.IsInRoleAsync(SecurityRoles.Admin))
            {
                <li>
                    <a class="sidebar-header" href="/Admin/User/Index">
                        <i data-feather="user"></i><span> @userManagement</span>
                    </a>
                </li>
            }
            <li>
                <a class="sidebar-header" href="/Admin/Product/Index">
                    <i data-feather="database"></i><span> @productManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/Admin/Order/Index">
                    <i data-feather="truck"></i><span> @orderManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/Admin/Category/Index">
                    <i data-feather="package"></i><span> @categoryManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/Admin/Brand/Index">
                    <i data-feather="settings"></i><span> @brandManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/Admin/Color/Index">
                    <i data-feather="sliders"></i><span> @colorManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/Admin/Size/Index">
                    <i data-feather="maximize-2"></i><span> @sizeManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/Admin/Material/Index">
                    <i data-feather="paperclip"></i><span> @materialManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/Admin/Promotion/Index">
                    <i data-feather="target"></i><span> @promotionManagement</span>
                </a>
            </li>
       
            <li>
                <a class="sidebar-header" href="/Admin/Rating/Index">
                    <i data-feather="star"></i><span> @ratingManagement</span>
                </a>
            </li>
            <li>
                <a class="sidebar-header" href="/">
                    <i data-feather="rotate-cw"></i><span> @backToHome</span>
                </a>
            </li>

        </ul>
    </div>
</div>