@using ShoesShop.DAL.Constants
@using ShoesShop.DAL.Helpers

@{
    Layout = null;

    var title = AppVersion.IsEnglishVersion ? "Add New Category" : "Thêm thể loại";
    var required = AppVersion.IsEnglishVersion ? "This field is required." : "Trường này là bắt buộc.";
    var save = AppVersion.IsEnglishVersion ? "Save" : "Thêm";
    var cateName = AppVersion.IsEnglishVersion ? "Category Name" : "Tên thể loại";
    var existed = AppVersion.IsEnglishVersion ? "Category Name has existed" : "Tên thể loại đã tồn tại.";
}
<input type="hidden" id="existedText" value="@existed"/>

<div class="modal-header">
    <h4 class="modal-title">@title</h4>
    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>

<div class="modal-body">
    <form id="frmSubmit" class="contact-form">
        <div class="form-group required">
            <input class="input form-control" type="text" name="Name" placeholder="@cateName">
            <span class="text-danger" style="display: none;">@required</span>
            <span class="text-danger" id="Existed" style="display: none;"></span>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button class="btn btn-primary text-center" id="btn-submit-add-new">@save</button>
</div>

<script src="~/js/application/admin/category/add-new.js"></script>