@using ShoesShop.DAL.Constants
@model ShoesShop.BLL.ViewModels.Color.ColorDetailModel

@{
    Layout = null;

    var title = AppVersion.IsEnglishVersion ? "Update Color" : "Cập nhật màu sắc";
    var required = AppVersion.IsEnglishVersion ? "This field is required." : "Trường này là bắt buộc.";
    var save = AppVersion.IsEnglishVersion ? "Save" : "Cập nhật";
    var colorName = AppVersion.IsEnglishVersion ? "Color Name" : "Tên màu sắc";
    var existed = AppVersion.IsEnglishVersion ? "Color Name has existed" : "Tên màu sắc đã tồn tại.";

}
<input type="hidden" id="existedText" value="@existed"/>
<input type="hidden" id="CategoryName" value="@Model.Name"/>

<div class="modal-header">
    <h4 class="modal-title">@title</h4>
    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>

<div class="modal-body">
    <form id="frmSubmit" class="contact-form">
        <div class="form-group required">
            <input class="input form-control" type="text" value="@Model.Name" name="Name" placeholder="@colorName">
            <span class="text-danger" style="display: none;">@required</span>
            <span class="text-danger" id="Existed" style="display: none;"></span>
        </div>
        <input class="input form-control" type="hidden" value="@Model.Id.ToString()" name="Id">
    </form>
</div>

<div class="modal-footer">
    <button class="btn btn-primary text-center" id="btn-submit-update">@save</button>
</div>

<script src="~/js/application/admin/cl/update.js"></script>