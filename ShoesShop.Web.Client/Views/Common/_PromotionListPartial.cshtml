@using ShoesShop.DAL.Constants
@model List<ShoesShop.BLL.ViewModels.Promotion.PromotionDetailModel>

@{
    Layout = null;
    var title = AppVersion.IsEnglishVersion ? "Promotions" : "Mã giảm giá đang có";
    var promotionCode = AppVersion.IsEnglishVersion ? "Promotion Code" : "Mã giảm giá";
    var discountPercent = AppVersion.IsEnglishVersion ? "Discount Percent" : "Giảm (%)";
    var notFound = AppVersion.IsEnglishVersion ? "Not Found" : "Không tìm thấy";
}
<style>
#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>

<div class="modal-header">
    <h4 class="modal-title">@title</h4>
    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>


@if (Model?.Count == 0)
{
    <p style="text-align: center; font-size: 20px">@notFound</p>
}
else
{
    <div class="modal-body">
        <div>
            <table id="customers">
                <tr>
                    <th>@promotionCode</th>
                    <th>@discountPercent</th>
                </tr>
                @if (Model?.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.DiscountPercent%</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
}
