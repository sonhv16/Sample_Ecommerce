@using ShoesShop.DAL.Constants
@{
    Layout = null;
    var shoppingCart = AppVersion.IsEnglishVersion ? "Shopping Cart" : "Giỏ hàng";
    var search = AppVersion.IsEnglishVersion ? "Search here" : "Tìm kiếm";
}

<!-- Header section -->
<header class="header-section">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 text-center text-lg-left">
                    <!-- logo -->
                    <a href="@AppConst.Domain" class="site-logo">
                        <img src="@AppConst.LogoForLight" alt="">
                    </a>
                    @* <h1 style="position: absolute !important;padding: 11px !important;font-size: 26px !important"> *@
                    @*     GOLDEN B *@
                    @* </h1> *@
                </div>
                <div class="col-xl-6 col-lg-5">
                    <form class="header-search-form">
                        <input type="text" id="searchText" placeholder="@search">
                        <button id="btn-search">
                            <i class="flaticon-search"></i>
                        </button>
                    </form>
                </div>
                <div class="col-xl-4 col-lg-5">
                    <div class="user-panel">
                        <div class="up-item" id="div-header">

                        </div>
                        <div class="up-item">
                            <div class="shopping-card">
                                <i class="flaticon-bag"></i>
                                <span id="total-item-cart">0</span>
                            </div>
                            <a href="/Cart/Index">@shoppingCart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="main-navbar">
        <div class="container" id="div-menu">

        </div>
    </nav>
</header>
<!-- Header section end -->