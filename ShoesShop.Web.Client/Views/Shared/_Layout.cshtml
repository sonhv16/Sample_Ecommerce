@using ShoesShop.DAL.Constants
@{
    var orderCheck = AppVersion.IsEnglishVersion ? "Tracking Order" : "Kiểm tra đơn hàng";
    var check = AppVersion.IsEnglishVersion ? "Check" : "Kiểm tra";
    var codeText = AppVersion.IsEnglishVersion ? "Code" : "Mã đơn hàng";
    var placeholderCode = AppVersion.IsEnglishVersion ? "Enter order code" : "Vui lòng nhập mã hóa đơn tại đây";
    var required = AppVersion.IsEnglishVersion ? "This field is required." : "Trường này là bắt buộc.";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Website Bán Giày</title>

    <!--ProG Coder-->
    <link href="~/css/loading.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" type="text/css" href="~/lib/toast/jquery.toast.min.css">
